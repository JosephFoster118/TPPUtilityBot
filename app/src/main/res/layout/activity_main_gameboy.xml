<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:background="@drawable/background_color"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webviewholder">

            <!--
            <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/webview"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                />
                -->

        </RelativeLayout>
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/reload"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:id="@+id/reload_stream_button" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:layout_weight="0.1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:id="@+id/updater_holder">





        </RelativeLayout>
            <Button
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:textSize = "10dp"
                android:layout_weight="0.35"
                android:text="Reconnect"
                android:textAllCaps="false"
                android:background="#30ffffff"
                android:layout_alignParentRight="true"
                android:id="@+id/reconnect_button" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:id="@+id/button_holder">

            <GridLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/gridView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_marginTop="10dp"
                >

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageButton
                    android:padding="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize = "10dp"
                    android:text="Up"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/up_button"
                    android:background="@drawable/control_button"/>

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageButton
                    android:padding="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize = "10dp"
                    android:text="Up"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/left_button"
                    android:background="@drawable/control_button"
                    />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageButton
                    android:padding="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize = "10dp"
                    android:text="Up"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/right_button"
                    android:background="@drawable/control_button"
                    />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageButton
                    android:padding="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize = "10dp"
                    android:text="Up"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/down_button"
                    android:background="@drawable/control_button"
                    />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                </GridLayout>
            <GridLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/A_B_buttons"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageButton
                    android:padding="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize = "10dp"
                    android:text="Up"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/A_button"
                    android:background="@drawable/control_button"
                    />
                <ImageButton
                    android:padding="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize = "10dp"
                    android:text="Up"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/B_button"
                    android:background="@drawable/control_button"
                    />
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                </GridLayout>
            <GridLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/special_buttons"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:rowCount="1"
                android:columnCount="3"
                android:layout_marginBottom="10dp">
                <Button
                    android:padding="0dp"
                    android:layout_width="66dp"
                    android:layout_height="40dp"
                    android:textSize = "15dp"
                    android:text="start"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/start_button"
                    android:background="@drawable/control_button"
                    />
                <RelativeLayout
                    android:layout_width="66dp"
                    android:layout_height="40dp"/>
                <Button
                    android:padding="0dp"
                    android:layout_width="66dp"
                    android:layout_height="40dp"
                    android:textSize = "15dp"
                    android:text="select"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/select_button"
                    android:background="@drawable/control_button"
                    />
            </GridLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
